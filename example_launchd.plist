<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.arcteryx.monitor</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/at/Desktop/ARC/run.sh</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/Users/at/Desktop/ARC</string>
    
    <key>StandardOutPath</key>
    <string>/Users/at/Desktop/ARC/logs/monitor.log</string>
    
    <key>StandardErrorPath</key>
    <string>/Users/at/Desktop/ARC/logs/error.log</string>
    
    <!-- 每小时运行一次 -->
    <key>StartInterval</key>
    <integer>3600</integer>
    
    <!-- 或者使用 StartCalendarInterval 在特定时间运行 -->
    <!-- 例如：每天早上9点和晚上9点 -->
    <!--
